<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Convite</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/convite.css">
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chau+Philomene+One:ital@0;1&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@100..800&display=swap" rel="stylesheet">
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="https://www.thermas.com.br/shared/images/favicon/favicon-16x16.png">
</head>

<body>
    <ul class="sidebar py-5">
        <!-- Agendamentos -->
        <li>
            <a href="/agendamentos" class="pe-3"
                data-bs-toggle="tooltip" 
                data-bs-title="Lista de Agendamentos" 
                data-bs-placement="right">
                <i class="bi bi-list-task fs-4"></i>
            </a>
        </li>
        
        <!-- Agendar -->
        <li>
            <a href="/cadastro" class="pe-3"
                data-bs-toggle="tooltip" 
                data-bs-title="Criar Agendamento" 
                data-bs-placement="right">
                <i class="bi bi-plus-circle fs-4"></i>
            </a>
        </li>
        
        <!-- FullScreen -->
        <li>
            <a href="#" class="pe-3" onclick="fullscreen()"
                data-bs-toggle="tooltip" 
                data-bs-title="Tela Cheia" 
                data-bs-placement="right">
                <i class="bi bi-fullscreen fs-4"></i>
            </a>
        </li>        
        
        <!-- Enviar convite pro cliente -->
        <li>
            <a href="https://wa.me/55<%=novosDados.telefone%>" target="_blank" class="pe-3"
                data-bs-toggle="tooltip" 
                data-bs-title="Enviar convite" 
                data-bs-placement="right">
                <i class="bi bi-whatsapp fs-4"></i>
            </a>
        </li>        
        
        <!-- Login -->
        <li>
            <a href="#" class="pe-3"
            data-bs-toggle="tooltip" 
            data-bs-title="Sessão" 
            data-bs-placement="right">
            <i class="bi bi-person fs-4"></i></a>
        </li>
    </ul>
    <div class="container-fluid">
        <div class="row d-flex flex-row justify-content-center">
            <div class="col-12 col-sm-6 mainCard conviteYan" id="mainCard">
                <div class="header">
                    <h1>AGENDAMENTO</h1>
                    <img src="/img/maisThermas.webp" alt="maisTermasLogo" class="logoHeader">
                    <h3>CONVIDADOS</h3>
                </div>

                <main>
                    <div class="bgNomes">
                        <span class="nomes" id="nomes">
                            <% if (novosDados.nomesAgendamento===null || novosDados.nomesAgendamento==='undefined' ) { %>
                                <span> </span>
                            <% } else { %>
                                <%= novosDados.nomesAgendamento %>
                            <% } %>
                        </span>
                    </div>
                    <br><br>
                    <div class="bgInfo mb-auto">
                        <span class="local mb-1">
                            <span class="bold">Local</span>: Sala VIP
                        </span>
                        <br>
                        <span class="data mb-1">
                            <% if (novosDados.horarioAgendamento==="" || novosDados.horarioAgendamento==null) { %>
                                <span class="bold">Data:</span>
                                <%= new Date(novosDados.dataAgendamento).toLocaleDateString('pt-BR',{ timeZone: 'UTC' }) %>
                            <% } else { %>
                                <span class="bold">Data e Horário:</span>
                                    <%= new Date(novosDados.dataAgendamento).toLocaleDateString('pt-BR',{ timeZone: 'UTC' }) %> 
                                        às <%= novosDados.horarioAgendamento.slice(0, 5)%>h
                            <% } %>
                        </span>
                        <br>
                        <span class="mb-1 promotor">
                            <span class="bold" id="promotor">Promotor</span>: Yan Bueno
                        </span>
                    </div>
                </main>

                <footer>
                    <img src="/img/thermas-logo.png" alt="ThermasDeSaoPedro"
                        class="logoThermas">
                </footer>
            </div>
        </div>
        <script>
            // Exibição de Tooltips
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl, {trigger: 'hover'}))

            // Função que muda a tela para fullScreen clicando no button
            function fullscreen() {
                if (document.fullscreenElement) {
                    document.exitFullscreen();
                } else {
                    document.documentElement.requestFullscreen();
                }
            }

            // Permite Fullscreen com Double Click em qualquer lugar da tela
            window.addEventListener('dblclick', ()=> {
                fullscreen()
            });
        </script>
</body>

</html>